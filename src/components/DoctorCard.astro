---
<section
  class="relative py-28 md:py-36 overflow-hidden transition-colors duration-700 
  bg-gradient-to-b from-white via-gray-50 to-gray-100 
  dark:from-gray-950 dark:via-gray-900 dark:to-gray-950"
>
  <!-- üåå Fondo decorativo premium -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-[10%] left-[5%] w-[500px] h-[500px] rounded-full 
      bg-[rgba(var(--color-primary-rgb),0.1)] blur-3xl animate-pulseGlow"></div>
    <div class="absolute bottom-[5%] right-[10%] w-[400px] h-[400px] rounded-full 
      bg-[rgba(var(--color-primary-rgb),0.08)] blur-2xl animate-slowFloat"></div>
  </div>

  <!-- ü©∫ Encabezado -->
  <div class="container text-center fade-up space-y-6 mb-16">
    <h2 class="text-4xl sm:text-5xl font-extrabold text-gray-900 dark:text-white">
      {doctorSectionData.title}
    </h2>
    <p class="text-lg text-gray-700 dark:text-gray-300 max-w-2xl mx-auto leading-relaxed">
      {doctorSectionData.subtitle}
    </p>
  </div>

  <!-- üë®‚Äç‚öïÔ∏è Grid de doctores -->
  <div class="container grid gap-10 sm:grid-cols-2 lg:grid-cols-3">
    {doctorSectionData.doctors.map((doctor) => (
      <a
        href={doctor.profile}
        target="_blank"
        rel="noopener noreferrer"
        class="group relative bg-white/80 dark:bg-gray-900/70 backdrop-blur-md
          border border-gray-200/70 dark:border-gray-700/50 
          rounded-2xl shadow-md hover:shadow-[0_0_30px_rgba(var(--color-primary-rgb),0.2)]
          transition-all duration-500 overflow-hidden hover:-translate-y-1"
      >
        <!-- Imagen -->
        <div class="relative overflow-hidden">
          <img
            src={doctor.image}
            alt={doctor.name}
            class="w-full h-64 object-cover transition-transform duration-700 group-hover:scale-105"
            loading="lazy"
          />
          <!-- Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/10 to-transparent 
            opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
        </div>

        <!-- Contenido -->
        <div class="p-6 text-center space-y-3">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white 
            group-hover:text-[var(--color-primary)] transition-colors duration-300">
            {doctor.name}
          </h3>
          <span class="block text-[var(--color-primary)] dark:text-[var(--color-primary-300)] font-semibold">
            {doctor.specialty}
          </span>
          <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
            {doctor.description}
          </p>
        </div>

        <!-- Indicador visual -->
        <div class="absolute bottom-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
          <span class="inline-flex items-center gap-2 text-[var(--color-primary)] dark:text-[var(--color-primary-300)] text-sm font-medium">
            Ver perfil
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </span>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .fade-up {
    opacity: 0;
    animation: fadeUp 1s ease forwards;
  }

  @keyframes fadeUp {
    0% { opacity: 0; transform: translateY(40px); }
    100% { opacity: 1; transform: translateY(0); }
  }

  @keyframes slowFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }

  @keyframes pulseGlow {
    0%, 100% { opacity: 0.4; transform: scale(1); }
    50% { opacity: 0.9; transform: scale(1.1); }
  }

  .animate-slowFloat {
    animation: slowFloat 10s ease-in-out infinite;
  }

  .animate-pulseGlow {
    animation: pulseGlow 8s ease-in-out infinite;
  }
</style>
