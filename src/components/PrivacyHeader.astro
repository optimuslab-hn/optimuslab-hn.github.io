---
import { ShieldCheck } from "lucide-react";

const privacyHeaderData = {
  title: "Política de Privacidad",
  subtitle:
    "En OPTIMUS-LAB, valoramos tu confianza. Nos comprometemos a proteger tu información personal con transparencia, seguridad y responsabilidad.",
};
---

<section
  class="relative py-14 text-center bg-[var(--bg-default)] text-[var(--text-default)] overflow-hidden"
>
  <!-- Fondo decorativo sutil -->
  <div
    class="absolute inset-0 -z-10 bg-gradient-to-b from-[var(--color-primary)]/10 via-transparent to-transparent"
  ></div>

  <div class="container fade-up">
    <!-- Ícono principal -->
    <div
      class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-[var(--color-primary)]/10 mb-6"
    >
      <ShieldCheck className="w-8 h-8 text-[var(--color-primary)]" />
    </div>

    <!-- Título -->
    <h1 class="text-3xl md:text-4xl font-bold mb-4">{privacyHeaderData.title}</h1>

    <!-- Subtítulo -->
    <p class="max-w-2xl mx-auto text-[var(--muted)] leading-relaxed text-base md:text-lg">
      {privacyHeaderData.subtitle}
    </p>

    <!-- Línea decorativa inferior -->
    <div class="mt-10 flex justify-center">
      <span
        class="inline-block w-28 h-[3px] rounded-full bg-[var(--color-primary)]/70 blur-in"
      ></span>
    </div>
  </div>
</section>
