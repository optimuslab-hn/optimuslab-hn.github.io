---
const ctaData = {
  title: "Aprovecha nuestras promociones exclusivas",
  subtitle:
    "Tu salud merece lo mejor. Agenda tus estudios hoy mismo y obtén descuentos especiales en nuestros paquetes clínicos.",
  buttonText: "Agendar Cita",
  buttonLink: "/contact",
};
---

<section
  class="relative overflow-hidden py-24 md:py-32 transition-colors duration-500"
  style="
    background: radial-gradient(
      circle at 30% 20%,
      rgba(var(--color-primary-rgb), 0.12),
      transparent 70%
    ),
    radial-gradient(
      circle at 80% 80%,
      rgba(var(--color-primary-rgb), 0.08),
      transparent 70%
    ),
    var(--bg-default);
  "
>
  <!-- Fondo decorativo dinámico -->
  <div
    class="absolute inset-0 -z-10 opacity-30 dark:opacity-40 animate-[pulseGradient_10s_ease-in-out_infinite]"
    style="
      background: linear-gradient(
        135deg,
        rgba(var(--color-primary-rgb), 0.25),
        transparent 60%
      );
      filter: blur(60px);
    "
  ></div>

  <!-- Contenido principal -->
  <div class="container text-center relative z-10 px-4">
    <h2
      class="text-4xl sm:text-5xl font-extrabold text-[var(--text-default)] leading-tight fade-up"
    >
      {ctaData.title}
    </h2>

    <p
      class="mt-4 text-lg sm:text-xl text-[var(--muted)] max-w-2xl mx-auto fade-up"
      style="animation-delay: 150ms"
    >
      {ctaData.subtitle}
    </p>

    <div class="mt-8 fade-up" style="animation-delay: 300ms">
      <a
        href={ctaData.buttonLink}
        class="group inline-flex items-center justify-center gap-2 px-8 py-3 rounded-xl font-semibold shadow-lg transition-all duration-300
          bg-[var(--color-primary)]
          text-[var(--text-on-primary)]
          hover:bg-[var(--color-primary-600)]
          hover:text-[var(--text-on-primary-hover)]
          hover:shadow-[0_8px_24px_rgba(var(--color-primary-rgb),0.3)]
          focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-[rgba(var(--color-primary-rgb),0.3)]"
      >
        {ctaData.buttonText}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* Animación decorativa */
  @keyframes pulseGradient {
    0%, 100% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.05);
      opacity: 0.8;
    }
  }

  /* Colores adaptativos para texto del botón */
  :root {
    --text-on-primary: #ffffff;
    --text-on-primary-hover: #f9fafb;
  }

  [data-theme="light"] {
    --text-on-primary: #ffffff; /* texto blanco sobre fondo principal */
    --text-on-primary-hover: #f0f0f0;
  }

  [data-theme="dark"] {
    --text-on-primary: #ffffff;
    --text-on-primary-hover: #e5e7eb;
  }
</style>
