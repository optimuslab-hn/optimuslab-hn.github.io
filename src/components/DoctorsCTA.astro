const ctaData = {
  title: "Â¿Necesitas una consulta especializada?",
  subtitle: "Agenda tu cita con nuestros profesionales certificados y recibe atenciÃ³n personalizada.",
  button: {
    text: "Agendar Cita",
    link: "/contact",
  },
};
---

<section
  class="relative overflow-hidden py-32 md:py-40 transition-colors duration-700
    bg-gradient-to-br from-white via-gray-50 to-gray-100 dark:from-gray-950 dark:via-gray-900 dark:to-gray-950"
>
  <!-- ðŸŒŒ Glows decorativos -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-1/6 left-10 w-[600px] h-[600px] rounded-full
      bg-[rgba(var(--color-primary-rgb),0.1)] blur-3xl animate-pulseGlow"></div>
    <div class="absolute bottom-10 right-16 w-[500px] h-[500px] rounded-full
      bg-[rgba(var(--color-primary-rgb),0.08)] blur-2xl animate-slowFloat"></div>
  </div>

  <!-- ðŸ©º Contenido principal -->
  <div class="container mx-auto px-4 text-center flex flex-col items-center space-y-6 fade-up">
    <h2 class="text-5xl sm:text-6xl font-extrabold text-gray-900 dark:text-white leading-tight">
      {ctaData.title}
    </h2>
    <p class="max-w-2xl text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
      {ctaData.subtitle}
    </p>

    <!-- BotÃ³n CTA premium -->
    <a
      href={ctaData.button.link}
      class="mt-8 inline-block px-10 py-4 rounded-2xl font-semibold text-white
        bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-primary-600)]
        shadow-lg hover:shadow-[0_12px_30px_rgba(var(--color-primary-rgb),0.45)]
        transform transition-all duration-400 hover:-translate-y-1 hover:scale-105"
    >
      {ctaData.button.text}
    </a>
  </div>
</section>

<style>
  /* Animaciones reutilizables */
  @keyframes slowFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  @keyframes pulseGlow {
    0%, 100% { opacity: 0.4; transform: scale(1); }
    50% { opacity: 0.9; transform: scale(1.1); }
  }

  .animate-slowFloat { animation: slowFloat 12s ease-in-out infinite; }
  .animate-pulseGlow { animation: pulseGlow 8s ease-in-out infinite; }

  .fade-up { opacity: 0; animation: fadeUp 1s ease forwards; }
  @keyframes fadeUp { 0% { opacity: 0; transform: translateY(40px); } 100% { opacity: 1; transform: translateY(0); } }
</style>
