      <div class="mt-6 flex gap-4">
        {socialLinks.map(link => (
          <a
            href={link.url}
            aria-label={link.name}
            target="_blank"
            rel="noopener noreferrer"
            class="transform transition duration-300 hover:scale-110 hover:brightness-105"
          >
            <img
              src={link.icon}
              alt={link.name}
              class="w-6 h-6 transition-all duration-300 invert-0 dark:invert brightness-100 dark:brightness-110"
