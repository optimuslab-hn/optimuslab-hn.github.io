<section
  class="relative overflow-hidden bg-gradient-to-b from-blue-50 via-white to-blue-100 dark:from-gray-800 dark:via-gray-900 dark:to-gray-800 py-20 px-6"
  aria-label="Cabecera de Servicios"
>
  <!-- Halo decorativo corporativo detrás del título -->
  <div class="absolute inset-0 flex justify-center pointer-events-none">
    <div class="w-[50rem] h-[50rem] rounded-full bg-[var(--color-primary)]/10 blur-3xl translate-y-16"></div>
  </div>

  <!-- Contenedor principal -->
  <div class="relative max-w-6xl mx-auto flex flex-col-reverse md:flex-row items-center md:items-start justify-between gap-12">
    <!-- Texto principal con animaciones de entrada -->
    <div class="flex-1 text-center md:text-left space-y-6">
      <h1
        class="text-5xl sm:text-6xl md:text-7xl font-extrabold leading-tight tracking-tight text-gray-900 dark:text-white opacity-0 translate-y-6 animate-fade-up hover:scale-105 transition-transform duration-500"
      >
        <span class="text-gray-900 dark:text-white">Nuestros </span>
        <span class="text-[var(--color-primary)]">Servicios</span>
      </h1>

      <p
        class="max-w-3xl text-lg sm:text-xl text-gray-600 dark:text-gray-300 leading-relaxed opacity-0 translate-y-6 animate-fade-up delay-150 hover:text-[var(--color-primary)] transition-colors duration-300"
      >
        Conoce los <span class="font-semibold text-[var(--color-primary)]">análisis clínicos</span> que ofrecemos para cuidar tu salud
      </p>

      <div class="mt-6 w-28 h-1 rounded-full bg-[var(--color-primary)] opacity-0 animate-fade-up delay-300"></div>

      <a
        href="/contact"
        class="mt-8 inline-block px-8 py-3 bg-[var(--color-primary)] text-white rounded-[var(--radius-lg)] font-semibold shadow-lg opacity-0 animate-fade-up delay-500 hover:scale-105 hover:bg-[var(--color-primary)/90] transition-all duration-300"
      >
        Agenda tu cita
      </a>
    </div>

    <!-- Imagen representativa con animación -->
    <div class="flex-1 flex justify-center md:justify-end opacity-0 animate-fade-up delay-400">
      <img
        src="/images/service1.png"
        alt="Representación de los servicios clínicos del laboratorio"
        class="w-full max-w-lg rounded-2xl shadow-2xl ring-4 ring-white/30 transition-transform duration-500 transform hover:scale-105"
        loading="lazy"
      />
    </div>
  </div>
</section>

<!-- Animaciones personalizadas Tailwind -->
