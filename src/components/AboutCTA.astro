---
const aboutCTAData = {
  text: "Confía en nuestra experiencia para cuidar tu salud",
  buttonText: "Ver servicios",
  buttonLink: "/services",
};
---

<section
  class="relative overflow-hidden py-24 md:py-32 transition-colors duration-500"
  style="background-color: var(--bg-cta);"
>
  <!-- Fondos difusos animados -->
  <div
    class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[600px] rounded-full opacity-10 dark:opacity-20 blur-3xl animate-[pulseGradient_14s_ease-in-out_infinite]"
    style="background: rgba(var(--color-primary-rgb),0.15);"
  ></div>
  <div
    class="absolute bottom-0 right-1/2 translate-x-1/2 w-[500px] h-[500px] rounded-full opacity-8 dark:opacity-15 blur-3xl animate-[pulseGradient_18s_ease-in-out_infinite]"
    style="background: rgba(var(--color-primary-rgb),0.1);"
  ></div>

  <div class="container mx-auto px-4 relative z-10 text-center">
    <!-- Texto motivador -->
    <h2 class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-[var(--text-default)] leading-tight fade-up">
      {aboutCTAData.text}
    </h2>

    <!-- Botón CTA -->
    <div class="mt-8 fade-up" style="animation-delay:150ms">
      <a
        href={aboutCTAData.buttonLink}
        class="inline-flex items-center justify-center gap-2 px-8 py-4 rounded-xl font-semibold shadow-lg transition-all duration-300
               bg-[var(--color-primary)] text-white
               hover:bg-[var(--color-primary-600)] hover:shadow-[0_12px_36px_rgba(var(--color-primary-rgb),0.35)]
               focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-[rgba(var(--color-primary-rgb),0.3)]
               transform hover:-translate-y-1 hover:scale-105"
      >
        {aboutCTAData.buttonText}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* Tonos de fondo distintos */
  :root { --bg-cta: #eef6fa; } /* modo claro */
  html.dark { --bg-cta: #16212a; } /* modo oscuro */

  /* Animaciones */
  @keyframes fadeUp { 0% { opacity:0; transform:translateY(40px); } 100% { opacity:1; transform:translateY(0); } }
  .fade-up { opacity:0; animation: fadeUp 1s ease forwards; }

  @keyframes pulseGradient { 0%,100% { transform: scale(1); opacity:0.5; } 50% { transform: scale(1.05); opacity:0.8; } }
</style>
