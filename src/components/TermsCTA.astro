---
import { Mail, MessageSquare } from "lucide-react";

const ctaData = {
  title: "¿Tienes dudas sobre nuestros términos?",
  subtitle:
    "Nuestro equipo legal está disponible para resolver cualquier consulta relacionada con nuestras políticas o el uso de nuestros servicios.",
  contactEmail: "optimuslab1@gmail.com",
  contactAction: "Enviar mensaje",
};
---

<section
  class="relative py-20 text-center bg-[var(--bg-default)] text-[var(--text-default)] border-t border-[var(--muted)]/20 overflow-hidden"
>
  <!-- Fondo decorativo sutil con mejor contraste -->
  <div class="absolute inset-0 -z-10 bg-gradient-to-t from-[var(--color-primary)]/8 via-transparent to-transparent"></div>

  <div class="container fade-up">
    <div class="max-w-3xl mx-auto">
      <!-- Ícono -->
      <div
        class="inline-flex items-center justify-center w-14 h-14 rounded-full bg-[var(--color-primary)]/10 mb-5"
      >
        <MessageSquare className="w-7 h-7 text-[var(--color-primary)]" />
      </div>

      <!-- Título y descripción -->
      <h2 class="text-2xl md:text-3xl font-bold mb-3">{ctaData.title}</h2>
      <p class="text-[var(--muted)] max-w-2xl mx-auto mb-8 leading-relaxed">
        {ctaData.subtitle}
      </p>

      <!-- Botón de acción -->
      <a
        href={`mailto:${ctaData.contactEmail}`}
        class="inline-flex items-center gap-2 px-6 py-3 rounded-lg font-medium border border-[var(--color-primary)] 
               text-[var(--color-primary)] hover:bg-[var(--color-primary)] hover:text-white shadow-sm 
               transition-all duration-300 transform hover:-translate-y-1"
      >
        <Mail className="w-5 h-5" />
        <span>{ctaData.contactAction}</span>
      </a>
    </div>

    <!-- Línea decorativa final -->
    <div class="mt-16 flex justify-center">
      <span
        class="inline-block w-24 h-[3px] rounded-full bg-[var(--color-primary)]/60 blur-in"
      ></span>
    </div>
  </div>
</section>
